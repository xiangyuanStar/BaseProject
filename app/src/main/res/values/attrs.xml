<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeTextView">
        <attr name="scroll_interval" format="integer"/>
        <attr name="scroll_first_delay" format="integer"/>
        <attr name="scroll_mode">
            <enum name="mode_forever" value="100"/>
            <enum name="mode_once" value="101"/>
        </attr>
    </declare-styleable>

    <!-- 自定义正方形 -->
    <declare-styleable name="SquareTextView">
        <attr name="basis_textview" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SquareImageView">
        <attr name="basis_imageview" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SquareLinearLayout">
        <attr name="basis_linearlayout" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SquareRelativeLayout">
        <attr name="basis_relativelayout" format="boolean"/>
    </declare-styleable>

</resources>